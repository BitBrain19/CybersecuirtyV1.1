# Backend Environment Configuration
# Copy this file to .env and update with your values

# ==================== DATABASE ====================
DATABASE_URL=sqlite:///./securityai.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/securityai

# ==================== JWT & SECURITY ====================
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production-use-at-least-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
PASSWORD_RESET_TOKEN_EXPIRY_MINUTES=60

# ==================== SMTP EMAIL ====================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@securityai.local
SMTP_FROM_NAME=SecurityAI

# ==================== FRONTEND ====================
FRONTEND_URL=http://localhost:5173
FRONTEND_CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# ==================== ML SERVICE ====================
ML_SERVICE_URL=http://localhost:8001
ML_SERVICE_TIMEOUT=30

# ==================== LOGGING ====================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ==================== OPTIONAL: SMS FALLBACK ====================
# SMS_PROVIDER=twilio  # or nexmo
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_FROM_NUMBER=+1234567890

# ==================== OPTIONAL: REDIS (for caching/sessions) ====================
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# ==================== OPTIONAL: RATE LIMITING ====================
# RATE_LIMIT_FORGOT_PASSWORD=5  # Attempts per hour
# RATE_LIMIT_LOGIN=10  # Attempts per 15 minutes
